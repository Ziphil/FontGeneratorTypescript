{
  "name": "font-generator",
  "version": "1.0.0",
  "author": "Ziphil",
  "description": "",
  "homepage": "https://github.com/Ziphil/TypescriptFontGenerator",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "develop": "webpack-dev-server --mode development --devtool inline-source-map --config webpack.ts --hot",
    "generate": "ts-node ./source/index.ts",
    "start": "ts-node ./source/index.ts",
    "lint": "eslint source/**/*.ts",
    "lint:fix": "eslint --fix source/**/*.ts"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "ignorePatterns": "webpack.ts",
    "rules": {
      "@typescript-eslint/unified-signatures": "off"
    }
  },
  "nodemonConfig": {
    "watch": [
      "source"
    ],
    "ext": "ts",
    "exec": "ts-node ./source/index.ts"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.0",
    "@types/jsdom": "^16.2.14",
    "@types/mini-css-extract-plugin": "^2.5.0",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "babel-loader": "^8.2.5",
    "babel-polyfill": "^6.26.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.17.0",
    "eslint-config-ziphil": "^1.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.0",
    "nodemon": "^2.0.16",
    "sass": "^1.52.1",
    "sass-loader": "^13.0.0",
    "source-map-loader": "^3.0.1",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "command-line-args": "^5.2.1",
    "execa": "^5.1.1",
    "jsdom": "^19.0.0",
    "paper": "^0.12.15",
    "paperjs-offset": "^1.0.8",
    "query-string": "^7.1.1",
    "reflect-metadata": "^0.1.13"
  }
}
